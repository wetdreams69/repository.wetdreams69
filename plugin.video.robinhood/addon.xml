<addon id="plugin.video.robinhood"
       name="Robinhood"
       version="1.1.0"
       provider-name="wetdreams69">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.18.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Addon to watch channels from Robinhood</summary>
        <description>Access streams from a local or remote backend compatible with [rh-server](https://github.com/wetdreams69/rh-server).</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
